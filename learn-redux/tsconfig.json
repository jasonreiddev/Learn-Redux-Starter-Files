{
  "include": ["src/**/*", ".storybook/**/*"],
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "@storybook/*": [".storybook/*"],
      "src/*": ["src/*"],
      "@data/*": ["src/data/*"],
      "@hooks/*": ["src/hooks/*"],
      "@reducers/*": ["src/reducers/*"],
      "@components/*": ["src/stories/components/*"],
      "@widgets/*": ["src/stories/widgets/*"],
      "@pages/*": ["src/stories/pages/*"],
      "@styles/*": ["src/styles/*"]
    }
  }
}
